---
import type {Message} from "@/actions/utils"
import {Alert, AlertDescription, AlertTitle} from "./ui/alert"

// PROPS ***********************************************************************************************************************************
const {message} = Astro.props

// TYPES ***********************************************************************************************************************************
type Props = {message: Message | undefined}
export type {Props as FallbackAlertProps}
---

{
  message && (
    <Alert variant={message.code === "SUCCESS" ? "success" : "destructive"}>
      <AlertTitle>{message.code === "SUCCESS" ? "Succ√®s" : "Erreur"}</AlertTitle>
      <AlertDescription>{message.description}</AlertDescription>
    </Alert>
  )
}
